<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.MainActivity">

    <TextView
        android:id="@+id/tv_start_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启定位服务"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>
    <FrameLayout
        android:id="@+id/layFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bnb_tabBar"/>
    <com.ashokvarma.bottomnavigation.BottomNavigationBar
        android:id="@+id/bnb_tabBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:bnbAutoHideEnabled="true"
        app:bnbMode="mode_shifting"
        app:bnbBackgroundStyle="background_style_static"
        app:bnbInactiveColor="@android:color/darker_gray"
        app:bnbActiveColor="@color/colorPrimary"
        app:bnbBackgroundColor="@color/white">
    </com.ashokvarma.bottomnavigation.BottomNavigationBar>
</android.support.constraint.ConstraintLayout>